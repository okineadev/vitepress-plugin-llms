{
	// Formatter settings
	"editor.defaultFormatter": "oxc.oxc-vscode",

	"oxc.typeAware": true,

	"typescript.experimental.useTsgo": true,

	"editor.codeActionsOnSave": {
		"source.fixAll.oxc": "always"
	},

	// Read-only files
	"files.readonlyInclude": {
		"bun.lock": true,
		"tests/__snapshots__/**/*.snap": true
	},

	"material-icon-theme.files.associations": {
		"bunup.config.ts": "bun",
		"tsconfig.bun.json": "tsconfig",
		"lint-staged.config.ts": "lintstaged"
	},
	"material-icon-theme.folders.associations": {
		"tests/test-assets": "resource",
		"vitepress-components": "vue"
	},

	"yaml.schemas": {
		"./node_modules/@cspell/cspell-types/cspell.schema.json": "cspell.yml"
	}
}
