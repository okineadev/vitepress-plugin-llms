{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"experimentalScannerIgnores": ["**/bun.lock"],
		"includes": ["**", "!**/bun.lock"]
	},
	"formatter": {
		"lineWidth": 110
	},
	"linter": {
		"rules": {
			"complexity": {
				"noBannedTypes": "warn",
				// Disabled because `TS4111` - https://typescriptlang.org/tsconfig/#noPropertyAccessFromIndexSignature
				"useLiteralKeys": "off"
			},
			"correctness": {
				"useParseIntRadix": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},

	"overrides": [
		{
			"includes": ["**/*.vue"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off"
					}
				}
			}
		},
		{
			"includes": ["tests/**/*"],
			"linter": {
				"rules": {
					"suspicious": {
						// This rule is disabled because `@ts-ignore` is needed in tests when importing
						// something from the `src/` folder, otherwise TS will complain about importing
						// a file that is not included in `tsconfig.bun.json` ðŸ“œ
						"noTsIgnore": "off"
					}
				}
			}
		}
	]
}
